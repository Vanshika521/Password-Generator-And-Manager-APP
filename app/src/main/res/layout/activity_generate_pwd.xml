<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3795BD"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".generate_pwd">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Craft a Powerful Password in Seconds"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true" />



    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/textView1"
        android:padding="6dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginVertical="46dp"
        android:background="@color/white">

        <CheckBox
            android:id="@+id/cbtnA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Include LowerCase"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/cbtnB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Include UpperCase"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/cbtnC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Include Numbers"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/cbtnD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Include Special Characters"
            android:textColor="@color/black"
            android:textSize="20sp" />

    </LinearLayout>

    <Button
        android:id="@+id/btn1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Generate Password"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:backgroundTint="#D9F0F2"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/layout"
        />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/btn1"
        android:text="Your Generated Password is :"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select password length"
        android:layout_below="@id/textView2"
android:textColor="@color/white"
        android:textSize="20sp" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="20"
        android:progress="8"
        android:layout_below="@id/textView3"
        />

    <TextView
        android:id="@+id/tvPasswordLength"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password Length: 8"
        android:layout_below="@id/seekBar"
android:textColor="@color/white"
        android:textSize="16sp" />

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".generate_pwd"
    android:background="#D9F0F2">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Craft a Powerful Password in Seconds"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
    android:text="Your Generated Password is :"
    android:textSize="20dp"
    android:textColor="@color/black"
    android:textAlignment="center"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@id/textView1"/>

    <CheckBox
        android:id="@+id/cbtnA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Include LowerCase"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@id/textView2"
        app:layout_constraintEnd_toEndOf="@id/textView2"
        app:layout_constraintTop_toBottomOf="@id/textView2"
    />

    <CheckBox
        android:id="@+id/cbtnB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Include UpperCase"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@id/cbtnA"
        app:layout_constraintEnd_toEndOf="@id/cbtnA"
        app:layout_constraintTop_toBottomOf="@id/cbtnA"
        />

    <CheckBox
        android:id="@+id/cbtnC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Include Numbers"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@id/cbtnB"
        app:layout_constraintEnd_toEndOf="@id/cbtnB"
        app:layout_constraintTop_toBottomOf="@id/cbtnB"
       />

    <CheckBox
        android:id="@+id/cbtnD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Include Special Characters"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@id/cbtnC"
        app:layout_constraintEnd_toEndOf="@id/cbtnC"
        app:layout_constraintTop_toBottomOf="@id/cbtnC"
       />

</androidx.constraintlayout.widget.ConstraintLayout>
